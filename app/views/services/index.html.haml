%h1.heading-xlarge
  = t('.heading')

- if @services.empty?
  %p
    = t('.no_services_yet')
- else
  %table
    %thead
      %th{ scope: 'col' }
        = t('.name')
      %th{ scope: 'col' }
        = t('.actions')
    %tbody
      = pagy_nav(@pagy).html_safe
      = render partial: 'service', collection: @services

= link_to t('.new_service'), new_service_path, class: 'button button-cta'
